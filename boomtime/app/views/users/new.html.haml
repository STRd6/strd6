- @user.password = @user.password_confirmation = nil

= error_messages_for :user

- form_for :user, :url => users_path do |f|

  = p_label 'login', f.text_field(:login, { :class => "text" })

  = p_label 'email', f.text_field(:email, { :class => "text" })

  = p_label 'password', f.password_field(:password, { :class => "text" })

  = p_label 'password_confirmation', f.password_field(:password_confirmation, { :class => "text" })

  = p_label '', submit_tag('Sign up')
