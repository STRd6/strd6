- if active_character
  - render window('inventory') do
    .inventory_body
      - i = 0
      - active_character.inventory.each do |item|
        - while i < item.container_position
          = render_inventory_slot i
          - i += 1
        = render_inventory_slot i, item
        - i += 1
      - while i < 8
        = render_inventory_slot i
        - i += 1
    .clear