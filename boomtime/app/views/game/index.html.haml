#game
  -# javascript_tag "$('game').observe('click', function(){alert($current_action.id); return false;} );"
  - @area.features.each do |feature|
    = render :partial => 'feature', :locals => {:feature => feature}
  - @area.characters.each do |character|
    = render :partial => 'area_character', :locals => {:character => character}

= drop_receiving_element 'game', :accept => ['item', 'feature'], :hoverclass => 'hover', :onDrop => "function(drag, drop, event) { feature_dropped(drag, drop); }"