!!!
%html
  %head
    %meta{'http-equiv' => "Content-type", 'content' => "text/html; charset=utf-8"}
    %title= @title || "#{controller.controller_name}: #{controller.action_name}".titlecase
    = javascript_include_tag 'prototype'
    = javascript_include_tag 'effects' 
    = stylesheet_link_tag "main"

  %body
    #page
      #header
        - if logged_in?
          #user-greeting== Logged in as #{link_to_current_user :content_method => :login}
          #user-action== (#{link_to "Log out", logout_path, { :title => "Log out" }})
        -else
          #user-greeting= link_to_login_with_IP 'Not logged in'
          #user-action
            = link_to "Log in",  login_path,  { :title => "Log in" }
            == /
            = link_to "Sign up", signup_path, { :title => "Create an account" }
        %br

      
      #content
        %h1= @title || "#{controller.controller_name}: #{controller.action_name}".titlecase
        
        -if flash[:notice]
          #notice= flash[:notice]
        -if flash[:error]
          #error= flash[:error]

        = yield

      #footer
        = link_to "Home", :controller => "welcome"
        = "|" 
        = link_to "Characters", :controller => "characters"

      #bottom
        = image_tag "strd6Logo-small.png"