!!!
%html
  %head
    %meta{'http-equiv' => "Content-type", 'content' => "text/html; charset=utf-8"}
    %title= @title || "#{controller.controller_name}: #{controller.action_name}".titlecase
    = stylesheet_link_tag :all, :cache => true
    = javascript_include_tag 'prototype', 'effects', 'dragdrop', :cache => 'lib'
    -# 'juggernaut/juggernaut', 'juggernaut/swfobject'
    = javascript_include_tag 'application', :cache => 'app'

  %body
    #page
      %h1 Ruby Quiz 3

      #content
        Coming soon!
        = yield
      
      #footer
        = link_to "STRd6", "http://strd6.com"

    = javascript_tag "var AUTH_TOKEN = '#{form_authenticity_token};'" if protect_against_forgery?