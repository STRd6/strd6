%h2
  = @quiz.id
  = @quiz.title

%h3 Description
= preserve Maruku.new(@quiz.description).to_html

- unless @quiz.summary.blank?
  %a{:name => 'summary'}
  %h3 Summary
  = preserve Maruku.new(@quiz.summary).to_html

%hr
%small 
  posted
  = @quiz.created_at.to_s(:article)

.sharing
  = render :partial => "share", :locals => {:page_name => @quiz.title, :page_url => quiz_url(@quiz)}
