#sidebar
  - if @quiz && @quiz.responses.size > 0
    %h2 Solutions
    %ul
      - @quiz.responses.each do |response|
        %li
          = link_to response.author, response.reference

  - if @current_quiz
    %h2 Current Quiz
    %ol
      %li{:value => @current_quiz.id}= link_to @current_quiz.title, quiz_path(@current_quiz)

  %h2 Archives
  %ol
    - Quiz.has_summary.each do |quiz|
      %li{:value => quiz.id}= link_to quiz.title, quiz
