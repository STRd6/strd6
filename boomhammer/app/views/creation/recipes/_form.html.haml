= form.error_messages

%p
  = form.label :name
  = form.text_field :name

%h3 This recipe requires all of the following abilities:
= intrinsic_checkbox_array :recipe, :intrinsic_base_ids, form.object.intrinsic_base_ids

#ingredients
  %h3 Ingredients
  - form.fields_for :recipe_components do |ingredients_form|
    = render :partial => 'ingredient', :locals => {:form => ingredients_form}
= add_ingredient_link form

= events_assist(form)

.left
  = link_to "Back", creation_recipes_path

.right
  = submit_tag form.object.new_record? ? "Create" : "Update"