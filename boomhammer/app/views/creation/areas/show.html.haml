.area
  %h2= @area.name

  %h3 Opportunities
  - @area.opportunities.each do |opportunity|
    .opportunity
      = link_to opportunity.opportunity_base, [:creation, opportunity.opportunity_base]
      = link_to "Edit Opportunity Base", edit_creation_opportunity_base_path(opportunity.opportunity_base)
      = opportunity.requisites.to_sentence

  %h3 Links
  - @area.area_links.each do |link|
    .area_link
      = link_to link.linked_area, [:creation, link.linked_area]
      = link_to "Edit Link", edit_creation_area_link_path(link)
      = link.requisites.to_sentence

%p
  = link_to "Edit", :action => :edit, :id => @area.id