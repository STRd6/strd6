- form_for(@character) do |f|
  = f.error_messages

  %p
    = f.label :name
    = f.text_field :name, :class => :text

  %p
    = f.label :intrinsic
    = collection_select :character, :intrinsic, [:charisma, :flight, :see_invisible], :to_sym, :to_s

  .right
    = f.submit('Create')

= link_to 'Back', characters_path
