!!!
%html
  %head
    %meta{'http-equiv' => "Content-type", 'content' => "text/html; charset=utf-8"}
    %title= @title || "#{controller.controller_name}: #{controller.action_name}".titlecase
    = stylesheet_link_tag 'start/jquery-ui', :cache => true
    = stylesheet_link_tag :all, :cache => true
    = javascript_include_tag 'jquery', 'jquery-ui', :cache => 'jq'
    = javascript_include_tag 'application', :cache => 'app'

  %body
    #page
      #header
        %p.left
          

        %p.right
          - if logged_in?
            == Logged in as #{link_to current_account, my_account_path }
            == (#{link_to "Log out", logout_path, { :title => "Log out" }})

          -else
            = link_to "Log in",  login_path,  { :title => "Log in" }

      #content
        %h1= @title || "#{controller.controller_name}: #{controller.action_name}".titlecase
        = notifications
        = yield


