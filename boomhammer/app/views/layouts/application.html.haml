!!!
%html
  %head
    %meta{'http-equiv' => "Content-type", 'content' => "text/html; charset=utf-8"}
    %title= @title || "#{controller.controller_name}: #{controller.action_name}".titlecase
    = stylesheet_link_tag :all, :cache => 'app'
    = stylesheet_link_tag 'start/jquery-ui'
    = javascript_include_tag 'jquery', 'jquery-ui', :cache => 'jq'
    = javascript_include_tag 'application', :cache => 'app'

  %body
    #page
      = render :partial => 'game/header'

      #content
        %h1= @title || "#{controller.controller_name}: #{controller.action_name}".titlecase
        = notifications
        #game_notice= flash[:game_notice]
        = yield

    = render :partial => "components/analytics"
    = yield :javascript