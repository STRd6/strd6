!!!
%html
  %head
    %meta{'http-equiv' => "Content-type", 'content' => "text/html; charset=utf-8"}
    %title Pixie
    = stylesheet_link_tag :all, :cache => true
    = javascript_include_tag 'jquery'
    = javascript_include_tag 'pixie/pixie', 'jqcolor', 'jquery.hotkeys-0.7.9.min'
    = javascript_include_tag 'image_creation'
  %body
    #page
      = render :partial => 'creation/header'

      #content
        #notice
        %h1 Pixie
        = yield
        .right
          <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_blank">
          <input type="hidden" name="cmd" value="_s-xclick">
          <input type="hidden" name="encrypted" value="-----BEGIN PKCS7----------END PKCS7-----">
          <input type="image" src="https://www.paypal.com/en_US/i/btn/btn_donateCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
          <img alt="" border="0" src="https://www.paypal.com/en_US/i/scr/pixel.gif" width="1" height="1">
          </form>

    = javascript_tag "var $token = '#{form_authenticity_token}'"

    = render :partial => "components/analytics"