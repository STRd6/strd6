- form_for @account do |form|
  = form.error_messages
  %p
    = form.label :nickname
    = form.text_field :nickname, :class => :text

  %p
    = form.label :email
    = form.text_field :email, :class => :text

  %p
    - if @account.referrer
      = form.label :referrer
      = @account.referrer
    - else
      = form.label :referrer_code
      = form.text_field :referrer_code, :class => :text
  
  .right
    = submit_tag
